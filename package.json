{
  "name": "react-ts-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn run dev-server & yarn run tcm-watch",
    "build": "webpack --config webpack.config.prod.js",
    "fmt": "yarn stylelint --fix & yarn prettier",
    "prebuild": "tcm src/css",
    "tcm-watch": "tcm -w src/css",
    "dev-server": "webpack-dev-server --hot --config webpack.config.dev.js",
    "test": "jest",
    "tslint-check-prettier": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --write ./src/**/*.{ts,tsx,css}",
    "prettier-watch": "onchange \"./src/**/*.{ts,tsx,css}\" -- prettier --write {{changed}}",
    "precommit": "lint-staged",
    "stylelint": "stylelint './src/**/*.css'"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^1.0.0-rc.3",
    "jest": "^22.4.3",
    "jest-css-modules": "^1.1.0",
    "lint-staged": "^7.1.0",
    "onchange": "^4.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "postcss-reporter": "^5.0.0",
    "prettier": "^1.12.1",
    "react-hot-loader": "^4.1.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-prettier": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^22.4.5",
    "ts-loader": "^4.2.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.5.1",
    "typed-css-modules": "^0.3.4",
    "typescript": "^2.8.3",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,md}": [
      "yarn run fmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
